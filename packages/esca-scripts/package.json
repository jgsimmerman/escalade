{
  "name": "esca-scripts",
  "version": "0.0.0",
  "main": "dist/index.js",
  "browser": "dist/index.js",
  "module": "dist/index.mjs",
  "jsnext:main": "dist/index.mjs",
  "author": "Kennedy Rose <krose@escaladesports.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/escaladesports/esca-scripts.git"
  },
  "license": "MIT",
  "scripts": {
    "analyze": "cross-env ANALYZE=1 webpack -p",
    "invoke": "esca-scripts",
    "build": "babel-node src/cli -j",
    "dev": "cross-env NODE_ENV=development webpack-dev-server --hot --open --open-page \"/dev\"",
    "prepublishOnly": "npm run test && npm run build",
    "serve": "cd dist-dev && static-server --open",
    "test": "npm run build && mocha --require babel-core/register"
  },
  "bin": {
    "esca-scripts": "dist/cli.js"
  },
  "pre-commit": [
    "test"
  ],
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "chai": "^4.1.2",
    "cross-env": "^5.1.1",
    "fs-extra": "^5.0.0",
    "mocha": "^4.1.0",
    "npm-run-all": "^4.1.2",
    "pre-commit": "^1.2.2",
    "static-server": "escaladesports/static-server",
    "uglifyjs-webpack-plugin": "^1.1.8",
    "webpack": "^3.8.1",
    "webpack-bundle-analyzer": "^2.9.1"
  },
  "dependencies": {
    "meow": "^4.0.0"
  }
}
