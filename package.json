{
		"name": "escalade",
		"author": "Escalade Sports",
		"license": "MIT",
		"private": true,
		"workspaces": [
				"packages/*",
				"packages/@escaladesports/*"
		],
		"scripts": {
				"bootstrap": "npx lerna bootstrap --use-workspaces",
				"build": "npx lerna run build --stream",
				"clean:all": "npx lerna run clean --stream",
				"clean": "npx lerna clean",
				"new-version": "npx lerna version --conventional-commits --yes",
				"new-publish": "npx lerna publish --yes"
		},
		"husky": {
			"hooks": {
				"pre-commit": "lint-staged"
			}
		},
		"lint-staged": {
			"**/*.js": [
				"eslint --fix",
				"git add"
			]
		},
		"devDependencies": {
			"husky": "^4.2.1",
			"lerna": "^3.20.2",
			"lint-staged": "^10.0.7"
	}
}
